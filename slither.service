[Unit]
Description=Slither Gesture Control
Documentation=https://github.com/giosali/slither
After=graphical.target

[Service]
Type=simple
ExecStart=/usr/bin/slither --verbose
Restart=on-failure
RestartSec=5

# Security hardening  
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/dev/input /dev/uinput

[Install]
WantedBy=default.target